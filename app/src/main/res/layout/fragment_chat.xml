<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/conversationTranscriptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:text="@string/chat_empty" />
    </ScrollView>

    <!-- AI Inference Status Strip -->
    <LinearLayout
        android:id="@+id/chatInferenceStrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/inferenceTierIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/inference_tier_indicator_content_description"
            android:src="@drawable/ic_status_local"
            app:tint="@color/tier_local" />

        <TextView
            android:id="@+id/inferenceTierText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/inferenceLatencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <ImageView
            android:id="@+id/inferenceQualityIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/inference_quality_indicator_content_description"
            android:src="@drawable/ic_quality_good"
            app:tint="@color/quality_good" />

        <TextView
            android:id="@+id/inferenceQualityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/inferenceContextText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:singleLine="true" />
    </LinearLayout>

    <!-- Thinking/typing indicator -->
    <LinearLayout
        android:id="@+id/chatThinkingIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            style="?android:attr/progressBarStyleSmall" />

        <TextView
            android:id="@+id/chatThinkingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="@string/chat_thinking" />

        <TextView
            android:id="@+id/chatThinkingCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Emotion indicator strip -->
    <LinearLayout
        android:id="@+id/chatEmotionStrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/chatEmotionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:text="Affect:" />

        <TextView
            android:id="@+id/chatHedonicToneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/chatExpressionSummaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/chatCoherenceIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/emotion_coherence_indicator_content_description"
            android:src="@drawable/ic_quality_good"
            app:tint="@color/affect_coherence" />

        <TextView
            android:id="@+id/chatCoherenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Chat input bar -->
    <LinearLayout
        android:id="@+id/chatInputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chat_hint"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/conversationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendConversation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="0dp"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="24dp"
            android:contentDescription="Send" />
    </LinearLayout>
</LinearLayout>
