<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootScrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tron Protocol"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pluginCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Active plugins: 0"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/permissionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Permissions pending" />

                <TextView
                    android:id="@+id/startupStateBadgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/service_status_deferred_background"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    android:text="Service status: Unknown"
                    android:textColor="@color/service_status_badge_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/permissionRationaleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Permission help appears here when a feature needs access."
                    android:textColor="@color/permission_rationale_text" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/actionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTelephonyFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use telephony feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSmsFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Use SMS feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactsFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Use contacts feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLocationFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Use location feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStorageFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Use storage feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotificationsFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Use notifications feature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrantAllFiles"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Grant all files access" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartService"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Start background service" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenBotFather"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Open BotFather (Telegram setup)" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenPluginGuide"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open plugin expansion guide" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenKthemeRepo"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open Ktheme theme designer" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Message & Sharing Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/messageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message &amp; Media Share"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/messageFormatText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Format: [TYPE] title · uri · note · timestamp(ISO-8601), separated by space-middot-space ( · )" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Share document to AI" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Share picture to AI" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Share music/audio to AI" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShareLink"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Share web link to AI" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRuntimeSelfCheck"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Run AI runtime self-check" />

                <TextView
                    android:id="@+id/messageShareStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="[DOC] Design Spec · content://... · shared · 2026-02-16T11:00:00Z" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Plugin Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pluginManagementCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plugin Management"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pluginStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No plugin state yet" />

                <LinearLayout
                    android:id="@+id/pluginToggleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diagnostics Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/diagnosticsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Startup diagnostics"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diagnosticsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    tools:text="[MILESTONE] 2026-01-01 10:00:00.000 · boot_receiver_invoked" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
